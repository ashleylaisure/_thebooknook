<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- CSS -->
  <link rel="stylesheet" href="/stylesheets/styleHome.css" />
  <!-- BOXICONS -->
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <!-- JAVASCRIPT -->
  <script defer src="/js/apphome.js"></script>

  <title>The BookNook</title>
</head>

<body>

  <div class="home-container">
    <div class="home-form">

      <div class="home-left">

        <div class="brand">
          <h1 class="app-name">The BookNook</h1>
          <img src="/assets/storytelling (yellow).png" class="logo">
        </div>
        
        <img src="/assets/4498282.webp" class="cover-image">

        <p class="featured-words" > The ultimate reading tracker for bibliophiles</p>

      </div>

      <div class="home-right">
        
        <div class="btn-box">
          <button class="btn btn1" id="sing-in">Sign In</button>
          <button class="btn btn2" id="sign-up">Sign Up</button>
        </div>

        <!-------------------  Sign In Form -------------------->

        <div class="sign-in-form">

          <div class="form-title">
            <h1>Sign in</h1>
          </div>

          <% if (message) { %>
            <div class="alert alert-error"><%= message %></div>
          <% } %>

          <form action="/auth/sign-in" method="POST">
    
            <div class="form-inputs">

              <div class="input-box">
                <i class='bx bx-user icon'></i>
                <input type="text" name="username" class="input-field" placeholder= ' ' id="username" required />
                <label for="username" class="label">username</label>
                
              </div>

              <div class="input-box">
                <!-- <i class='bx bx-lock-alt icon'></i> -->
                <input type="password" name="password" class="input-field" placeholder= ' ' id="password" required />
                <label for="password" class="label" >password</label>
                
              </div>

              <div class="input-box">
                <button class="input-submit" type="submit">
                  <span>Sign In</span>
                  <i class="bx bx-right-arrow-alt"></i>
                </button>
              </div>

            </div>

          </form>


          <!-------------------  Sign UP Form -------------------->

        <div class="sign-up-form">

          <div class="form-title">
            <h1>Create a new Account!</h1>
          </div>

          <% if (message.length > 0) { %>
            <div class="alert alert-error"><%= message %></div>
          <% } %>
          
          <form action="/auth/sign-up" method="POST">
    
            <div class="form-inputs">

              <div class="input-box">
                <i class='bx bx-user icon'></i>
                <input type="text" name="username" class="input-field"  placeholder= ' ' id="username" required />
                <label for="username" class="label">username</label>
              </div>

              <div class="input-box">
                <i class='bx bx-envelope icon'></i>
                <input type="email" name="email" class="input-field"  placeholder= ' ' id="email" required />
                <label for="email" class="label">email</label>
              </div>

              <div class="input-box">
                <!-- <i class='bx bx-lock-alt icon'></i> -->
                <input type="password" name="password" class="input-field" placeholder= ' ' id="password" required />
                <label for="password" class="label">password</label>
              </div>

              <div class="input-box">
                <!-- <i class='bx bx-lock-alt icon'></i> -->
                <input type="password" name="confirmPassword" class="input-field"  placeholder= ' ' id="confirmPassword" required />
                <label for="confirmPassword" class="label">confirm password</label>
              </div>

              <div class="input-box">
                <button class="input-submit" type="submit">
                  <span>Sign Up</span>
                  <i class="bx bx-right-arrow-alt"></i>
                </button>
              </div>

            </div>

          </form>

    </div>

    

    <!-- <div class="freepick">
      <a  href="https://www.flaticon.com/free-icons/open-book" title="open book icons">
        Open book icons created by Freepik - Flaticon
      </a>
    </div> -->

  </div>

</body>

</html>
