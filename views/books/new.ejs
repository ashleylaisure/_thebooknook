<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- CSS -->
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <!-- BOXICONS -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <!-- JAVASCRIPT -->
    <script defer src="/js/app.js"></script>

    <title>Add a New Book</title>
</head>
<body>
    <%- include('../partials/_topnavbar.ejs') %>

    <div class="containter">

        <%- include('../partials/_asidenavbar.ejs') %>

        <!-- ------------------- NEW VIEW --------------------- -->
        <main>
            <div class="books">
            
                <h2>ADD A BOOK</h2>

                <form action="/users/<%=user._id%>/books" method="POST">
                    
                    <div class="new-book">
                    
                        <div class="add">

                            <div class="col1">
                                <div class="item">
                                    <label for="title" class="text-muted">Title: <p>(required)</p></label>
                                    <input type="text" name="title" id="title"  required/>
                                </div>
                                
                            
                                <div class="item">
                                    <label for="series" class="text-muted">Series Name:</label>
                                    <input type="text" name="series" id="series" />
                                </div>
                                

                                <div class="item">
                                    <label for="started" class="text-muted">Date Started:</label>
                                    <input type="date" name="started" id="started" />
                                </div>
                                

                                <div class="item">
                                    <label for="rating" class="text-muted">Rating:</label>
                                    <select id="rating" name="rating">
                                        <option value="0"></option>
                                        <option value="1">‚≠ê</option>
                                        <option value="2">‚≠ê‚≠ê</option>
                                        <option value="3">‚≠ê‚≠ê‚≠ê</option>
                                        <option value="4">‚≠ê‚≠ê‚≠ê‚≠ê</option>
                                        <option value="5">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê</option>
                                    </select>
                                </div>

                            </div>

                            <div class="col2">
                                <div class="item">
                                    <label for="author" class="text-muted">Author:</label>
                                    <input type="text" name="author" id="author" />
                                </div>
    
                                <div class="item">
                                    <label for="numSeries" class="text-muted">Number in Series:</label>
                                    <input type="number" name="numSeries" id="numSeries" />
                                </div>
    
                                <div class="item">
                                    <label for="finished" class="text-muted">Date Finished:</label>
                                    <input type="date" name="finished" id="finished" />
                                </div>
        
                                <div class="item">
                                    <label for="spiceRating" class="text-muted">Spice Rating:</label>
                                    <select id="spiceRating" name="spiceRating">
                                        <option value="0"></option>
                                        <option value="1">üå∂ Glimpses & Kisses</option>
                                        <option value="2">üå∂üå∂ Fade to Black</option>
                                        <option value="3">üå∂üå∂üå∂ Open Door</option>
                                        <option value="4">üå∂üå∂üå∂üå∂ Explicit Open Door</option>
                                        <option value="5">üå∂üå∂üå∂üå∂üå∂ Explicit & Plentiful</option>
                                    </select>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="new-book-section">

                        <div calss="col1">
                            <div class="item">
                                <label for="status" class="text-muted">Status:</label>
                                <select id="status" name="status">
                                    <option value="tbr">TBR</option>
                                    <option value="reading">READING</option>
                                    <option value="read">READ</option>
                                    <option value="paused">PAUSED</option>
                                    <option value="dnf">DNF</option>
                                </select>
                            </div>
                        </div>

                        <div calss="col2">
                            <div class="item"> 
                                <label for="format" class="text-muted">Format:</label>
                                <select id="format" name="format">
                                    <option value="Audiobook">Audiobook</option>
                                    <option value="Ebook">Ebook</option>
                                    <option value="Hardcover">Hardcover</option>
                                    <option value="Paperback">Paperback</option>
                                </select>
                            </div>
                        </div>

                        <div calss="col3">
                            <div class="item">
                                <label for="genre" class="text-muted">Genre:</label>
                                <select id="genre" name="genre">
                                    <option value="Biography">Biography</option>
                                    <option value="Classic">Classic</option>
                                    <option value="Contemporary Fiction">Contemporary Fiction</option>
                                    <option value="Dark Academia">Dark Academia</option>
                                    <option value="Fantasy">Fantasy</option>
                                    <option value="Historical Fiction">Historical Fiction</option>
                                    <option value="History">History</option>
                                    <option value="Horror">Horror</option>
                                    <option value="Literary Fiction">Literary Fiction</option>
                                    <option value="Memoir">Memoir</option>
                                    <option value="Mystery">Mystery</option>
                                    <option value="Nonfiction">Nonfiction</option>
                                    <option value="Play">Play</option>
                                    <option value="Poetry">Poetry</option>
                                    <option value="Retelling">Retelling</option>
                                    <option value="Romance">Romance</option>
                                    <option value="Romantasy">Romantasy</option>
                                    <option value="Science Fiction">Science Fiction</option>
                                    <option value="Thriller">Thriller</option>
                                    <option value="Young Adult">Young Adult</option>
                                </select>
                            </div>
                        </div>

                    </div>
                    <div class="new-book">
                        <label for="photo" class="text-muted">Book Cover Photo: <p>(insert utilizing copy image link)</p></label>
                        <input type="url" name="photo" id="photo" placeholder="https://example.com"></input>
                    </div>

                    <div class="new-book">
                        <label for="review" class="text-muted">Book Review:</label>
                        <textarea name="review" id="review"></textarea>
                    </div>
                    
                    <div class="add-new-book">
                        <i class='bx bx-book-add'></i>
                        <button type="submit"><b class="primary" >Add Book</b></button>
                    </div>
        
                </form>


            </div>
        </main>
        

        
    </div>
</body>
</html>